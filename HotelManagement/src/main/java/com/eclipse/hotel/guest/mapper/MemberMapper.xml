<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper     
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eclipse.hotel.guest.mapper.MemberMapper">

<!-- 회원가입 -->
<insert id="memberInsert" parameterType="memberVO">
INSERT INTO member
VALUES (member_seq.nextval, #{id}, #{password}, #{name}, #{gender}, 
#{birth}, #{phone}, #{email}, #{zipcode}, #{address}, sysdate)
</insert>

<!-- 아이디 중복 확인 -->
<select id="idCheck" resultType="String">
SELECT id
FROM member
WHERE id = #{id}
</select>

<!-- 로그인 -->
<select id="memberLogin" parameterType="memberVO" resultType="String">
SELECT password
FROM member 
WHERE id = #{id}
</select>

<!-- 고객 번호 -->
<select id="memberNo" resultType="int">
SELECT m_num
FROM member
WHERE id = #{id}
</select>

<!-- 마이페이지 -->
<select id="memberPage" resultType="memberVO">
SELECT * 
FROM member
WHERE m_num = #{m_num}
</select>

<!-- 회원정보 수정 -->
<select id="memberUpdate" parameterType="memberVO">
UPDATE member
SET name = #{name}, password = #{password}, gender = #{gender}, birth = #{birth},
phone = #{phone}, email = #{email}, zipcode = #{zipcode}, address = #{address}
WHERE m_num = #{m_num}
</select>

</mapper>